<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3">User info</h2>
      <% if @user.errors.any? %>
      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user, method: :patch do |f| %>
        <p class="mb-2">Name</p>
        <%= f.text_field :name, class: "form-control" %>
        <p class="mt-3 mb-2">Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <p class="mt-3 mb-2">Introduction</p>
        <%= f.text_area :introduction, class: "form-control" %>
        <%= f.submit 'Update User', class: "btn btn-secondary mt-3" %>
      <% end %>

    </div>
  </div>
</div>