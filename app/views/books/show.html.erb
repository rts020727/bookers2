<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <%= render 'list', book: @book, user: @user %>

      <div class="col-md-8 offset-md-1 mt-3">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book_show.user_id) do %>
                  <%= image_tag @user.get_image, size: "100x100" %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td><%= link_to @book_show.title, book_path %></td>
              <td><%= @book_show.body %></td>
              <% if @book_show.user == current_user %>
                <td><%= link_to "Edit", edit_book_path, class: "btn btn-success" %></td>
                <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか？" , class: "btn btn-danger" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
